{
  "name": "khr-reflow-vsc",
  "displayName": "Khronos Asciidoctor Spec Reflow",
  "description": "Reflow AsciiDoc files as Khronos specification tools would.",
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Formatters"
  ],
  "contributes": {
    "configuration": {
      "title": "Khronos Reflow AsciiDoc",
      "properties": {
        "khr-reflow.enable": {
          "type": "boolean",
          "default": true,
          "description": "Specifies whether formatting should be enabled."
        }
      }
    }
  },
  "activationEvents": [
    "onLanguage:asciidoc"
  ],
  "main": "./out/src/extension.js",
  "repository": {
    "url": "https://github.com/rpavlik/khr-reflow-vsc"
  },
  "license": "Apache-2.0",
  "publisher": "ryanpavlik",
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run build && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/line-by-line": "^0.1.6",
    "@types/mocha": "^10.0.1",
    "@types/node": "^14.18.36",
    "@types/vscode": "1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "@vscode/test-electron": "^2.2.3",
    "acorn": "^8.8.2",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "prettier": "2.8.3",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@ryan.pavlik/khr-reflow": "^2.1.2"
  }
}
