{
	"name": "khr-reflow-vsc",
	"displayName": "Khronos Asciidoctor Spec Reflow",
	"description": "Reflow AsciiDoc files as Khronos specification tools would.",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:asciidoc"
	],
	"main": "./out/main.js",
	"repository": {
		"url": "https://github.com/rpavlik/khr-reflow-vsc"
	},
	"license": "Apache-2.0",
	"publisher": "rpavlik",
	"scripts": {
		"vscode:prepublish": "npm run esbuild-base -- --minify",
		"esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
		"test-compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/line-by-line": "^0.1.5",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "1.60.0",
		"@typescript-eslint/eslint-plugin": "^4.31.1",
		"@typescript-eslint/parser": "^4.31.1",
		"@vscode/test-electron": "^1.6.2",
		"esbuild": "^0.13.4",
		"eslint": "^7.32.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.4.3"
	},
	"dependencies": {
		"@ryan.pavlik/khr-reflow": "^2.0.0"
	}
}
